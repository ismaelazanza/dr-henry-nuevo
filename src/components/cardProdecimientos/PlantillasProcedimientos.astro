---
import { Icon } from 'astro-icon/components'
import ExternalScripts from "../ExternalScripts.astro";

interface Props {
  titulo?: string;
  description1?: string;
  description2?: string;
  description3: string;
  description4: string;
  description5: string;
  description6: string;
  description7: string;
  imgRecupera: string;
  srcCasosUno: string;
  dataCasosUno: string;
  descrCasosUno: string;
  srcCasosDos: string;
  dataCasosDos: string;
  descrCasosDos: string;
  srcCasosTres: string;
  dataCasosTres: string;
  descrCasosTres: string;
  srcCasosCuatro: string;
  dataCasosCuatro: string;
  descrCasosCuatro: string;
  srcCasosCinco: string;
  dataCasosCinco: string;
  descrCasosCinco: string;

}

const {
  titulo,
  description1,
  description2,
  description3,
  description4,
  description5,
  description6,
  description7,
  imgRecupera,
  srcCasosUno,
  dataCasosUno,
  descrCasosUno,
  srcCasosDos,
  dataCasosDos,
  descrCasosDos,
  srcCasosTres,
  dataCasosTres,
  descrCasosTres,
  srcCasosCuatro,
  dataCasosCuatro,
  descrCasosCuatro,
  srcCasosCinco,
  dataCasosCinco,
  descrCasosCinco,
} = Astro.props;
---

