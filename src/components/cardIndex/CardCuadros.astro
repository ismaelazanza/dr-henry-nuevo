        <img src={src} width="60" height="60" alt="Icono">
    </div>

    <div>
        <h2 class="uppercase mb-2 text-xl">{title}</h2>
        <p class="mb-2 text-base">{descripcion}</p>
        <div class="inline-block">
            <a class="flex text-[#3ca9d2] font-light" href={href}>
