      <div>
          <img class="h-auto max-w-full rounded-lg" src="/img/operasonr2.avif" alt="Imagen">
      </div>
      <div>
          <img class="h-auto max-w-full rounded-lg" src="/img/operasonr3.avif" alt="Imagen">
      </div>
  </div>
  <div class="grid gap-4">
      <div>
          <img class="h-auto max-w-full rounded-lg" src="/img/operasonr4.avif" alt="Imagen">
