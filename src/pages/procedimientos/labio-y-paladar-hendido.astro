---
// import { Icon } from "astro-icon";
import Layout from "../../layouts/Layout.astro";
import Top from "../../components/Top.astro";
import Menu from "../../components/Menu.astro";
import Footer from "../../components/Footer.astro";
import PlantillasProcedimientos from "../../components/cardProdecimientos/PlantillasProcedimientos.astro";
import MenuMobil from "../../components/MenuMobil.astro";
---

<Layout title="Dr Henry Aguirre | Labio y Paladar Hendido">
  <main>
    <header id="hero">
      <div class="promo">
        <Top />

        <div class="bg_header__fondo animate-fade animate-duration-[900ms]">
          <div class="">
            <div
              class="contenedor mx-auto py-10 flex items-center justify-center"
            >
              <a href="/">
                <img
                  class="inline-block"
                  width="250"
                  src="/img/logodrvertical.svg"
                  alt="Logo"
                />
              </a>
            </div>

            <div class="lg:hidden">
              <MenuMobil />
            </div>
            <div class="color__back__menu hidden lg:block">
              <div
                class="contenedor mx-auto flex justify-center items-center h-16"
              >
                <div class="">
                  <Menu />
                </div>
              </div>
            </div>
          </div>
          <div class="back__procedmientos">
            <div
              class="contenedor mx-auto flex flex-col justify-center items-center py-20"
            >
              <h2 class="text-4xl sm:text-5xl">Labio y Paladar Hendido</h2>
              <p class="text-sm text-center text-[#323756] sm:text-lg">
                La rinoplastia es una cirugía en la <br /> que se modifica la
                forma de la nariz
              </p>
            </div>
          </div>
        </div>
      </div>

    <!-- 
      <video muted autoplay loop>
        <source src="../../img/videoback2.mp4" type="video/mp4" />
      </video>

    -->

      <div class="capa"></div>
    </header>

    <section>
      <PlantillasProcedimientos
        titulo="Labio y Paladar Hendido"
        description1="El labio hendido y el paladar hendido son defectos de nacimiento que se producen cuando el labio o la boca del bebé no se forman adecuadamente durante el embarazo."
        description2="Estos defectos de nacimiento a menudo se conocen de manera conjunta como 'hendiduras orofaciales'."

        description3="Corrección del labio leporino"
        description4="Mejora la autoestima del paciente."
        description5="Mejora su calidad de vida."
        description6="Propicia su inserción en su entorno social."
        description7="Recupera la seguridad y confianza en ti."
        imgRecupera="/img/labioypaladrar.jpeg"

        srcCasosUno="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        dataCasosUno="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        descrCasosUno="Imagen de Cirugia"
        srcCasosDos="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        dataCasosDos="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        descrCasosDos="Imagen de Cirugia"
        srcCasosTres="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        dataCasosTres="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        descrCasosTres="Imagen de Cirugia"
        srcCasosCuatro="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        dataCasosCuatro="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        descrCasosCuatro="Imagen de Cirugia"
        srcCasosCinco="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        dataCasosCinco="/img/WhatsApp-Image-2023-09-21-at-19.54.25-scaled.webp"
        descrCasosCinco="Imagen de Cirugia"
      />
    </section>

    <footer>
      <Footer />
    </footer>
  </main>
</Layout>

<style>
  #hero {
    position: relative;
  }

  .promo {
    position: relative;
    z-index: 2;
  }

  video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .capa {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    opacity: 0.5;
    mix-blend-mode: luminosity;
  }

  .color__back__menu {
    border-top: 0.9px solid #e8f1ffd7;
    border-bottom: 0.9px solid #e8f1ffd7;

    /* background-color: #e8f1ff75; */
  }

